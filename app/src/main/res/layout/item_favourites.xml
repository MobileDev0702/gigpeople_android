                <TextView
                    android:id="@+id/mobile_verified"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Mobile Verified"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:textSize="@dimen/txt_11"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_background_profile_changes_three"
                    android:fontFamily="@font/geomanist_regular"/>

                <TextView
                    android:id="@+id/mobile_notverified"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Mobile Not Verified"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:textSize="@dimen/txt_11"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_background_profile_changes_red"
                    android:fontFamily="@font/geomanist_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:id="@+id/img_mobile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/phone_gray"
                        />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/mail_gray"
                      />
