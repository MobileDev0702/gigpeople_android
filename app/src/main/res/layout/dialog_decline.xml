<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:background="@color/colorPrimary">
<LinearLayout
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:gravity="center"
    android:layout_marginRight="20dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/cancel"
        android:layout_gravity="end"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/geomanist_regular"
    android:text="Reason for decline"
    android:textSize="16sp"
    android:textAlignment="center"
    android:textColor="@color/colorBlack"
    android:textStyle="bold"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_marginTop="10dp"
    android:background="@drawable/btn_bg_gray_outline">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:hint="Reply"
        android:gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:fontFamily="@font/geomanist_regular"
        android:textColorHint="@color/colorGrayText"
        android:textSize="14sp"/>
</LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_bg_orange_fill"
        android:text="SUBMIT"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/geomanist_regular"
        android:textColor="@color/colorPrimary"
        android:layout_weight="0.5"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>
</LinearLayout>
