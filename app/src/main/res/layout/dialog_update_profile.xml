<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_bg_white_curve_small_redius"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_mssage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hinted_geomanist_book"
            android:text="You did not update your profile"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hinted_geomanist_book"
            android:paddingTop="10dp"
            android:text="Profile -> Click edit icon on right side"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_16" />

        <TextView
            android:id="@+id/txtredirct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hinted_geomanist_book"
            android:paddingTop="10dp"
            android:text="Click here to Update"
            android:textAlignment="center"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/txt_16" />

    </LinearLayout>
</LinearLayout>