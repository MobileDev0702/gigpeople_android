<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/geomanist_regular"
                android:text=""
                android:textAlignment="center"


                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:src="@drawable/close_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hinted_geomanist_regular_0"
            android:gravity="center"
            android:text="Gig Feedback"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin_5star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fivestar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/gray_5star" />

            </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/lin_4star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_4star"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/gray_4star" />

            </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/lin_3star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_3star"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/gray_3star" />

            </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/lin_2star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_2star"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/gray_2star" />

            </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/lin_1star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_onestar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/gray_1star" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_bg_gray_outline"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edit_message"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/geomanist_regular"
                android:gravity="start"
                android:hint="Type your Feedback..."
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"

            android:background="@drawable/btn_bg_orange_fill"
            android:fontFamily="@font/geomanist_regular"
            android:text="SUBMIT"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>
